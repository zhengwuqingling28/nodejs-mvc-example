<div class="mt-4">
  <h3>Update Blog</h3>
  <form method="POST" action="/manager/courses/{{course._id}}?_method=PUT">
    <div class="mb-3">
      <label for="Name" class="form-label">Name: </label>
      <input
        type="text"
        name="name"
        class="form-control"
        id="Name"
        value="{{course.name}}"
      />
    </div>
    <div class="mb-3">
      <label for="Description" class="form-label">Description: </label>
      <textarea
        type="text"
        name="description"
        class="form-control"
        id="Description"
      >{{course.description}}
      </textarea>
    </div>
    <div class="mb-3">
      <label for="Image" class="form-label">Image: </label>
      <input
        type="text"
        name="image"
        class="form-control"
        id="Image"
        value="{{course.image}}"
      />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>